{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],

  "labels": ["dependencies"],
  "dependencyDashboardLabels": ["dependencies"],

  "prConcurrentLimit": 4,
  "prHourlyLimit": 2,

  "major": {
    "dependencyDashboardApproval": true
  },

  "assignees": ["simon.cockx@regnosys.com"],

  "packageRules": [
    {
      "matchPackagePatterns": ["^org\\.eclipse\\.(xtext|xtend)"],
      "dependencyDashboardApproval": true
    },
    {
      "matchPackagePatterns": ["*"],
      "excludePackagePatterns": ["^org\\.eclipse\\.(xtext|xtend)"],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "groupName": "all non-breaking dependencies",
      "groupSlug": "all-non-breaking"
    }
  ]
}
