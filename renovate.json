{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],

  "labels": ["dependencies"],
  "dependencyDashboardLabels": ["dependencies"],

  "prConcurrentLimit": 4,
  "prHourlyLimit": 2,

  "major": {
    "dependencyDashboardApproval": true
  },

  "assignees": ["simon.cockx@regnosys.com"],

  "packageRules": [
    {
      "matchPackagePatterns": ["^org\\.eclipse\\.(xtext|xtend)"],
      "versioning": "regex:^(\\d+)\\.(?<major>\\d+)\\.(?<patch>\\d+)?$"
    },
    {
      "matchPackagePatterns": ["*"],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "groupName": "all non-major dependencies",
      "groupSlug": "all-minor-patch"
    }
  ]
}
